<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".CreateAppointmentFragment" >

    <TableRow>
		      <TextView
				   android:id="@+id/createAppointmentappointmentIdLabel"
				   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="AppointmentId:" />
				
	  <EditText
		   android:id="@+id/createAppointmentappointmentIdField"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createAppointmentcodeLabel"
				   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="Code:" />
				
	  <EditText
		   android:id="@+id/createAppointmentcodeField"

		   android:layout_span="4" />
	</TableRow>	
	<TableRow>
	  <Button
		   android:id="@+id/createAppointmentOK"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_column="1"
		   android:background="#AAAAFF"
		   android:text="OK"
		   android:onClick="createAppointmentOK"/>
	  <Button
		   android:id="@+id/createAppointmentCancel"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_column="3"
		   android:background="#FFAAAA"
		   android:text="Cancel"
		   android:onClick="createAppointmentCancel"/>
	 </TableRow>		

</TableLayout>
</ScrollView>
